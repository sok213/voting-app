<!-- link stylesheet to over-ride main style.css -->
<link rel="stylesheet" href="/css/dashboard.css">

<h2 class="page-header">
  <span><i class="fa fa-pie-chart" aria-hidden="true"></i></span>
  {{{poll.topic}}}
</h2>

<form class="options" action="" method="post">
  {{#each poll.options}}
    <input type="radio" name="vote" value={{option}}> {{this}}<br>
  {{/each}}
  <button type="button" class="btn btn-warning">Add option</button>
  <button type="submit" class="btn btn-success">Vote</button>
</form>

<h4><small>Posted By <a href="#">{{{poll.creator}}}</a></small></h4>