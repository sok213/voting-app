<!-- link stylesheet to over-ride main style.css -->
<link rel="stylesheet" href="/css/dashboard.css">
<link rel="stylesheet" href="/css/profile.css">

<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-md-12 col-sm-12 content">
          <h2 class="page-header">
            <span><i class="fa fa-user-circle" aria-hidden="true"></i></span>
            {{{userName}}}'s Profile 
          </h2>
          <h4 class="text-muted"><small>{{{realName}}}</small></h4>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
      <div class="col-md-12 col-sm-12 content content-profile">
        
        <div class="col-md-6 col-sm-12">
          <h3>Polls Created</h3>
          <div class="row">
            <div class="col-md-12">
              <div class="pollsContainer">
                {{#each pollsCreated}}
                <a href="/users/poll/{{{this.pollsCreatedId}}}">
                  <div class="poll-btn">
                    <span style="color: rgb(59, 203, 126); font-weight: 600">Q: </span> {{this.title}}
                  </div>
                </a>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-md-6 col-sm-12">
          <h3>Polls Voted On</h3>
          <div class="row">
            <div class="col-md-12">
              <div class="pollsContainer">
                {{#each pollsVoted}}
                  <a href="/users/poll/{{{this.pollID}}}">
                    <div class="poll-btn">
                      <span style="color: rgb(59, 203, 126); font-weight: 600">Q: </span> {{this.pollTopic}} <br>
                      <span style="color: rgb(161, 106, 180); font-weight: 600">A: </span> {{this.votedFor}}
                    </div>
                  </a>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>
</div>
<!-- /.container -->