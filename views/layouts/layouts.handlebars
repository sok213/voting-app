<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>VoteTube</title>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>VoteTube</h1>
      </div>
      
      {{#if user}}
        <a href="/">Dashboard</a>
        <a href="/users/logout">Logout</a>
      {{else}}
        <a href="/users/login">Login</a>
        <a href="/users/register">Sign Up</a>
      {{/if}}
    
      {{#if success_msg}}
        <div class="notice">
            {{success_msg}}
        </div>
      {{/if}}
      
      {{#if error_msg}}
        <div class="notice">
            {{error_msg}}
        </div>
      {{/if}}
      
      {{#if error}}
        <div class="notice">
            {{error}}
        </div>
      {{/if}}

      {{{body}}}
    </div>
  </body>
</html>