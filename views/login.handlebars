<link rel="stylesheet" href="/css/explore.css">
<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-12">
          <div class="content">
            <div class="container2">
              <h1><img src="/images/logolarge.png" alt="">{{title}}</h1>
              <h2 class="page-header">Log In</h2>
              {{#if success_msg}}
                <div class="success">
                    {{success_msg}}
                </div>
              {{/if}}

              {{#if error_msg}}
                <div class="error">
                    {{error_msg}}
                </div>
              {{/if}}

              {{#if error}}
                <div class="error">
                    {{error}}
                </div>
              {{/if}}
              <form action="/users/login" method="post">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-success">Log In</button>
              </form>
            </div>
            </div>
        </div>
        
        <div class="col-md-6 col-sm-12">
          <div class="explore">
            <div class="page-header-secondary">
              <h3><i class="fa fa-paper-plane" aria-hidden="true"></i>Explore Recent Polls</h3>
            </div>
            
            <div class="polls-container">
              {{#each recentPolls}}
                <a href="/users/poll/{{this._id}}" class="btn btn-default recent-item">
                  <span style="color: rgb(55, 181, 71)">Q: </span> {{this.topic}} <br>
                  <span style="color: rgb(120, 73, 172); float: left"><small>Posted by {{this.creator}}</small></span>
                </a> <br>
              {{/each}}
            </div>
          </div>
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->