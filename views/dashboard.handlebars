<!-- link stylesheet to over-ride main style.css -->
<link rel="stylesheet" href="/css/dashboard.css">
<link rel="stylesheet" href="/css/explore.css">

<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-12 content content-custom">
          <h2 class="page-header">
            <span><i class="fa fa-home" aria-hidden="true"></i></span>
            {{{capitalize user.username}}}'s Dashboard
          </h2>

          <form action="index.html" method="post">
            <a href="/users/createpoll" class="btn btn-success">Create poll</a>
            <a href="/profile/{{{user._id}}}" class="btn btn-primary">Public profile</a>
            <a href="/users/mypolls" class="btn btn-default">Manage polls</a>
          </form>

        </div>
        
        <div class="col-md-6 col-sm-12">
          <div class="explore">
            <div class="page-header-secondary">
              <h3><i class="fa fa-paper-plane" aria-hidden="true"></i>Explore Recent Polls</h3>
            </div>
            
            <div class="polls-container">
              {{#each recentPolls}}
                <a href="/users/poll/{{this._id}}" class="btn btn-default recent-item">
                  <span style="color: rgb(55, 181, 71)">Q: </span> {{this.topic}} <span style="color: rgb(120, 73, 172); float: right"><small>Posted by {{this.creator}}</small></span>
                </a> <br>
              {{/each}}
            </div>
          </div>
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->